generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Types {
  RetroWaveSynth
  VintageArcade
  RetroSurfScene
  RetroSpaceExploration
  RetroCassetteTapes
  OldSchoolRollerDisco
  RetroRacingCars
  VintageVinylRecords
  EightiesNeonTypography
  RetroFutureTech
  RetroTVAndStatic
  ClassicSkateboarding
  RetroSummerSunset
  PolaroidCamera
}

model Product {
  id                     String                 @id @default(uuid()) @map("_id")
  name                   String
  type                   Types
  priceInCents           Int
  filePath               String
  imagePath              String
  description            String
  isAvailableForPurchase Boolean                @default(true)
  createdAt              DateTime               @default(now())
  updatedAt              DateTime               @updatedAt
  orders                 Order[]
  downloadVerifications  DownloadVerification[]
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id               String   @id @default(uuid()) @map("_id")
  pricePaidInCents Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  userId           String
  productId        String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product          Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
}

model DownloadVerification {
  id        String   @id @default(uuid()) @map("_id")
  expiresAt DateTime
  createdAt DateTime @default(now())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
